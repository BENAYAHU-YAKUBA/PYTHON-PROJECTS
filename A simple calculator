def selected_password():
    user_password = ''

    def password_validation():
        nonlocal user_password
        user_input = input(f"""
Note: a perfect password must be at least 8 characters long and have:
 - an upper case letter
 - a lower case letter
 - a special character(excluding an underscore '_' and space ' ')
 - a digit
Enter password
: """)
        from re import findall
        lower = 'Correct'
        upper = 'Correct'
        special = 'Correct'
        digit = 'Correct'
        valid = 'Correct'
        no_space = 'Correct'
        chosen_password = ''
        length = 8
        while user_input:
            if len(user_input) < 8:
                print(f"""
Non-compliant password, length must be at least 8 characters long
""")
            else:
                if not findall("[a-z]", user_input):
                    lower = 'Missing lower case character'
                    valid = 'Incorrect'
                if not findall("[A-Z]", user_input):
                    upper = 'Missing upper case character'
                    valid = 'Incorrect'
                if not findall(r"\W+", user_input):
                    special = 'Missing special character'
                    valid = 'Incorrect'
                if not findall("[0-9]", user_input):
                    digit = 'Missing a digit'
                    valid = 'Incorrect'
                if findall(" ", user_input):
                    space = 'Space not allowed'
                    valid = 'Incorrect'

                def space_check():
                    nonlocal user_input
                    nonlocal no_space
                    nonlocal valid
                    if user_input.find(' ') == -1:
                        no_space = 'Correct'
                    else:
                        no_space = 'Space not allowed'

                space_check()
                if valid == 'Correct':
                    print(f"""
Perfect Password.
Your password is {user_input}
""")
                    chosen_password = user_input
                    user_password = user_input
                    break
            compliance_check = []
            compliance_check.extend((lower, upper, special, digit, no_space))
            for x in compliance_check:
                if x != 'Correct':
                    print(x)
            password_validation()
            break

    password_validation()
    return user_password


pw = selected_password()

